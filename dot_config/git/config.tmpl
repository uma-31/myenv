[core]
	editor = nvim

[user]
	name = {{ .user.name }}
	email = {{ .user.email }}

[init]
	defaultBranch = main

[url "git@github.com:"]
	insteadOf = https://github.com/

[wt]
	copy = "mise.local.toml"
	copy = "mise.toml"
	copy = "mise/"
	copy = ".mise/"
	copy = ".config/mise.toml"
	copy = ".config/mise/"
	hook = "~/.config/git/wt-hooks/post-create"
